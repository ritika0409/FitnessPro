<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBitterSweet"
    android:layout_height="match_parent"
    tools:context=".crunches">
    <ImageView
        android:id="@+id/image_pushup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/crunches_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRUNCHES"
        android:id="@+id/tv_pushup"
        android:layout_below="@id/image_pushup"
        android:layout_centerInParent="true"
        android:fontFamily="monospace"
        android:textColor="#123456"
        android:textSize="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pushup"
        android:text="Targets: Abs"
        android:textSize="25dp"
        android:id="@+id/tv_Target"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Target"
        android:text="Time Duration: 3 minutes"
        android:textSize="25dp"
        android:id="@+id/tv_Time"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:id="@+id/tv_Benefits"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_below="@id/tv_Time"
        android:fontFamily="sans-serif-black"
        android:text="Benefits:\nCrunches help strengthen muscles but are not the way to lose belly fat. Eat clean and exercise daily to achieve body fat reduction.\nAbdominal crunches are a highly effective way of improving the balance because they aid in strengthening up the muscles in your abdominal cavity. "
        android:textSize="16dp" />
    <Button
        android:id="@+id/but_Step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-black"
        android:text="Step-by-Step Instructions "
        android:textSize="20dp" />

</RelativeLayout>