<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="#123456">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/banner"
            android:textAlignment="center"
            android:textSize="24sp"
            android:gravity="bottom"
            android:textColor="@color/colorPrimaryDark"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@color/colorGrapeFruit"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/music"
                    android:id="@+id/im1"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorGrapeFruitDark"
                    android:text="Music"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bt1"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@color/colorBitterSweet"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/workout"
                    android:scaleType="fitXY"
                    android:id="@+id/im2"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorBitterSweetDark"
                    android:text="Home Workout"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bt2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@color/colorFlower"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/diet"
                    android:scaleType="centerCrop"
                    android:id="@+id/im3"

                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorFlowerDark"
                    android:text="Diet Chart"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bt3"/>

            </LinearLayout>


        </LinearLayout>

        <!-- Second Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@color/colorGrass"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stopwatch"
                    android:scaleType="fitXY"
                    android:id="@+id/im4"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorGrassDark"
                    android:text="Stopwatch"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bt4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@color/colorBlueJeans"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/timer"
                    android:scaleType="fitXY"
                    android:contentDescription="TODO"
                    android:id="@+id/im5"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorBlueJeansDark"
                    android:text="Timer"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bt5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:background="@color/colorLavander"
                >
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/feedback"
                    android:id="@+id/im6"
                    android:scaleType="fitXY"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorLavanderDark"
                    android:text="Feedback"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bt6"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>