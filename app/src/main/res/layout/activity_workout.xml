<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".workout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlueJeansDark"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/fitness" />
        <Button
            android:id="@+id/mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tue"
            android:layout_marginBottom="10dp"
            android:background="@color/pink"
            android:text="MONDAY" />

        <Button
            android:id="@+id/tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/wed"
            android:layout_marginBottom="10dp"
            android:background="@color/pink"
            android:text="TUESDAY" />

        <Button
            android:id="@+id/wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/thur"
            android:background="@color/pink"
            android:layout_marginBottom="10dp"
            android:text="WEDNESDAY" />

        <Button
            android:id="@+id/thur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fri"
            android:layout_marginBottom="10dp"
            android:background="@color/pink"
            android:text="THURSDAY" />

        <Button
            android:id="@+id/fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/sat"
            android:layout_marginBottom="10dp"
            android:background="@color/pink"
            android:text="FRIDAY" />

        <Button
            android:id="@+id/sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/sun"
            android:background="@color/pink"
            android:text="SATURDAY" />

        <Button
            android:id="@+id/sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="11dp"
            android:background="@color/pink"
            android:text="SUNDAY" />
    </RelativeLayout>

</LinearLayout>