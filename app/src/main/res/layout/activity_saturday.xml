<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".saturday">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="229dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/saturday" />

    <Button
        android:id="@+id/but_sprint"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorfour"
        android:layout_marginTop="278dp"
        android:text="SPRINT"
        android:textColor="@color/colorSaturday"
        android:textSize="40dp" />

    <Button
        android:id="@+id/but_crunches"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPinkRoseDark"
        android:layout_marginTop="344dp"
        android:text="CRUNCHES"
        android:textColor="@color/colorWednesday"
        android:textSize="40dp" />


    <Button
        android:id="@+id/but_squats"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorAquaDark"
        android:layout_marginTop="410dp"
        android:text="SQUATS"
        android:textColor="@color/colorMonday"
        android:textSize="40dp" />


    <Button
        android:id="@+id/but_pushup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorGrassDark"
        android:layout_marginTop="476dp"
        android:text="PUSH UPS"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />

</RelativeLayout>