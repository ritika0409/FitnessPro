<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorMint"
    android:layout_height="match_parent"
    tools:context=".lunges">
    <ImageView
        android:id="@+id/image_pushup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lunges_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUNGES"
        android:id="@+id/tv_lunges"
        android:layout_below="@id/image_pushup"
        android:layout_centerInParent="true"
        android:fontFamily="monospace"
        android:textColor="#123456"
        android:textSize="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lunges"
        android:text="Targets: Lower Body"
        android:textSize="25dp"
        android:id="@+id/tv_Target"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Target"
        android:text="Time Duration: 2 minute"
        android:textSize="25dp"
        android:id="@+id/tv_Time"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:id="@+id/tv_Benefits"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_below="@id/tv_Time"
        android:fontFamily="sans-serif-black"
        android:text="Benefits:\nLunges are quite effective in terms of strengthening legs and buttocks. Lunges target large muscle groups of your lower body; this boosts your metabolism and helps you lose weight much faster. When this excess fat is removed, lunges work on the shape and strength of your lower body. "
        android:textSize="16dp" />
    <Button
        android:id="@+id/but_Step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-black"
        android:text="Step-by-Step Instructions "
        android:textSize="20dp" />


</RelativeLayout>