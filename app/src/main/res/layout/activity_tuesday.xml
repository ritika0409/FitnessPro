<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tuesday">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/tuesday" />

    <Button
        android:id="@+id/but_crunches"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="278dp"
        android:background="@color/colorFlower"
        android:text="CRUNCHES"
        android:textColor="@color/colorSaturday"
        android:textSize="40dp" />


    <Button
        android:id="@+id/but_pushups"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="344dp"
        android:text="PUSH UPS"
        android:background="@color/colorBlueJeans"
        android:textColor="@color/colorFlower"
        android:textSize="40dp" />


    <Button
        android:id="@+id/but_sideplank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIDE PLANKS"
        android:layout_marginTop="410dp"
        android:background="@color/colorThursday"
        android:textColor="@color/colorWhite"
        android:textSize="40dp" />


    <Button
        android:id="@+id/tv_sprint"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="476dp"
        android:text="SPRINT"
        android:background="@color/colorPinkRose"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />

</RelativeLayout>