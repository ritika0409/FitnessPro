<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friday">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/friday" />

    <Button
        android:id="@+id/but_sprint"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="278dp"
        android:text="SPRINT"
        android:background="@color/colorFlower"
        android:textColor="@color/colorSaturday"
        android:textSize="40dp" />



    <Button
        android:id="@+id/but_crunches"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorMint"
        android:layout_marginTop="344dp"
        android:text="CRUNCHES"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />


    <Button
        android:id="@+id/but_squats"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="410dp"
        android:text="SQUATS"
        android:background="@color/colorPinkRose"
        android:textColor="@color/colorThursday"
        android:textSize="40dp" />

    <Button
        android:id="@+id/tv_planks"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBlueJeans"
        android:layout_marginTop="476dp"
        android:text="PLANKS"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />


</RelativeLayout>